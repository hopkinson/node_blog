<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <!-- <h1><%= title %></h1> -->
    <!-- <p>Welcome to <%= title %></p> -->

  <%- include header %> 

  <% posts.forEach(function(post){  %>
  	<p>
  		<h2>
  			<a href="#">
  				 <%= post.title %> 
  			</a>
  		</h2>
  	</p>
  	<p class="info">
		作者:
		<a href="#">
			<%= post.name %> 
		</a>
		日期:
		<a href="#">
			<%= post.time.minute %> 
		</a>
  	</p>
  <%- post.post %> 
  <% }) %>
  </body>
</html>
